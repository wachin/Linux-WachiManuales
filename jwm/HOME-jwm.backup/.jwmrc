        <Separator/>
        <Program icon="terminal.png" label="Terminal">konsole</Program>
        <Separator/>
        <Program icon="/usr/share/icons/gnome/16x16/actions/system-search.png" label="App Finder">
            xfce4-appfinder
        </Program>
        <Separator/>
        <Program icon="/usr/share/icons/gnome/16x16/actions/reload.png" label="Recargar Menu y JWM">bash $HOME/RisenPC-JWM/Script-GenerarMenu-y-ReiniciarJWM.sh</Program>
	<Menu label="Salir" icon="/usr/share/icons/gnome/16x16/actions/stop.png" height="0">
    <!-- Vi el comando de Reiniciar(Restart) y Poweroff(Apagar) en: JWM - ArchWiki -->
    <!-- https://wiki.archlinux.org/index.php/JWM -->
               <Program icon="/usr/share/icons/gnome/16x16/actions/reload.png" label="Reiniciar">systemctl reboot</Program>
               <Program icon="/usr/share/icons/gnome/16x16/actions/reload.png" label="Suspender">systemctl suspend</Program>
               <Program icon="/usr/share/icons/Human/16x16/stock/generic/stock_exit.png" label="Apagar">systemctl poweroff</Program>
        <Exit label="Cerrar sesion" confirm="true" icon="/usr/share/icons/gnome/16x16/actions/system-log-out.png"/>
	</Menu>
    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Class>xclock</Class>
        <Option>sticky</Option>
    </Group>
    <Group>
        <Name>xterm</Name>
        <Option>tiled</Option>
    </Group>
    <Group>
        <Name>pidgin</Name>
        <Option>drag</Option>
        <Option>notitle</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" height="25" autohide="off">

        <TrayButton icon="/usr/share/jwm/jwm-red.svg">root:1</TrayButton>
        <Spacer width="2"/>
        <TrayButton label="_">showdesktop</TrayButton>
        <Spacer width="2"/>

        <Pager labeled="true"/>

        <TaskList maxwidth="256"/>

        <Dock/>
        <Clock format="%H:%M"><Button mask="123">exec:orage</Button></Clock>

    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>Sans-9:bold</Font>
        <Width>4</Width>
        <Height>21</Height>
        <Corner>3</Corner>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
        <Outline>#000000</Outline>
        <Opacity>0.5</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
            <Outline>#000000</Outline>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle group="true" list="all">
        <Font>Sans-9</Font>
        <Background>#333333</Background>
        <Foreground>#FFFFFF</Foreground>
        <Outline>#000000</Outline>
        <Opacity>0.75</Opacity>
    </TrayStyle>
    <PagerStyle>
        <Outline>#000000</Outline>
        <Foreground>#555555</Foreground>
        <Background>#333333</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>Sans-9</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#333333</Background>
        <Outline>#000000</Outline>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
        </Active>
        <Opacity>0.85</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>Sans-9</Font>
        <Foreground>#000000</Foreground>
        <Background>#999999</Background>
    </PopupStyle>


